azul = #22BCE0
gris-oscuro = #444
gris_texto = #7A7A7A
naranja = #DD4F24

@font-face {
    font-family: 'iconitos';
    src:url('../fonts/icomoon.eot');
    src:url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
        url('../fonts/icomoon.ttf') format('truetype'),
        url('../fonts/icomoon.woff') format('woff'),
        url('../fonts/icomoon.svg#icomoon') format('svg');
    font-weight: normal;
    font-style: normal;
}

a
    color naranja

body
    background #E8E8E8
    color gris-oscuro
    font-family arial
    font-size 16px

footer
    background naranja
    color rgba(white,0.5)
    padding 1em 0
    text-align center
    width 100%

    h3
        font-size 14px
        font-weight normal

        strong
            display block

        .pie
            &:before
            &:after
                content " - "
    
header
    background gris-oscuro
    box-shadow 0 5px 0 rgba(0, 0, 0, 0.2)
    color white
    padding 0.5em
    position relative
    overflow hidden
    z-index 2
    
    .logo
        border-right 1px solid azul
        float left
        width 60px
    
        img
            width 52px

    .titular
        margin 0 60px 0 70px

        .filtro        
            color azul
            font-size 14px
            font-style italic
            font-weight bold
            text-decoration none

        .publicar
            background naranja
            color white
            float right
            font-style italic
            margin -5px 1em 0 0
            padding 0.2em 0.5em
            text-decoration none
            text-shadow 1px 1px 0px black

            &:before
                display inline-block
                content "\e600"
                font-family "iconitos"
                margin 0 3px 0 0

        .titulo
         font-size 18px
         font-weigth normal
         margin 0
         padding 0

    .usuario
        position absolute
        right 10px
        top 10px

        .avatar
            margin 0 1.1em 0 0
            position relative
            z-index 2
            img 
                width 50px
                border-radius 50%

        .flecha
            background naranja
            color white
            display block
            padding 2px
            position absolute
            top 15px
            right 0
            text-align right
            text-decoration none
            width 50%

            &:after
                content "\e602"
                display inline-block
                font-family "iconitos"
                text-shadow 1px 1px 0px black 
    
nav
    background azul
    border-left 15px solid white
    position relative

    &:before
        border-bottom 20px solid transparent
        border-left 7px solid white
        border-top 20px solid transparent
        content ""
        position absolute
        top 0
        left 0
    
    .menu
        height 40px
        line-height 40px 
        margin 0
        overflow-x auto
        padding 0
        white-space nowrap

        &::-webkit-scrollbar
            display none

        li 
            display inline-block

            a
                color white
                display inline-block
                margin 0 0.5em
                padding 0 0.2em
                text-decoration none

                &:hover
                    background rgba(black,0.1)

.posts
    padding 0.5em

    .post
        background white
        border-radius 0 0 0.5em 0.5em
        box-shadow 2px 2px 10px rgba(black, 0.5)
        color gris_texto
        margin-bottom 0.5em

        .acciones
            border-top 3px solid azul
            padding 0.5em
            overflow hidden

            .datos
                float right

                .comentarios
                    background gris_texto
                    border-radius 3px
                    color white
                    margin 0 1em 0 0
                    padding 2px 5px
                    text-decoration none

                .estrellita
                    text-decoration none

                    &:after
                        color #E0D561
                        content "\e601"
                        font-family "iconitos"

            .votos
                float left

                .down
                .up
                    text-decoration none

                .down
                    color red
                    &:before
                        content "\e602"
                        font-size 1.5em
                        font-family "iconitos"
                        vertical-align bottom

                .up
                    color green
                    &:before
                        content "\e603"
                        font-size 1.5em
                        font-family "iconitos"
                        vertical-align bottom
            
        .descripcion
            
            .detalles
                height 160px
                margin-left 130px

                .autor
                    margin 0.5em 0 2em 0

                .fecha
                    float right
                    margin 0 1em 0 0

                .tag
                    background azul
                    border-radius 0.5em
                    color white
                    padding 0.2em 0.5em
                    text-decoration none

                .titulo
                    color gris-oscuro
                    font-size 18px
                    font-style italic
                    margin 0
                    padding 0.5em 0.5em 0 0

            .imagen
                float left

                img 
                    height 160px
                    vertical-align top
                    width 120px

@media screen and (min-width: 768px)

    header
        .titular
            .publicar
                padding-left 3em
                position relative

                &:before
                    font-size 2em
                    left 0px
                    position absolute
                    top -10px

    .posts
        .post
            display inline-block
            vertical-align top
            width 48%
            &:nth-child(odd)
                margin-right 2%