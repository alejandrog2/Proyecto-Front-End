gris-oscuro = #444
azul = #22BCE0
naranja = #DD4F24

body
    background #E8E8E8
    color gris-oscuro
    font-family arial
    font-size 16px
    
header
    background gris-oscuro
    color white
    padding 0.5em
    position relative
    overflow hidden
    z-index 2
    
    .logo
        border-right 1px solid azul
        float left
        width 60px
    
        img
            width 52px

    .titular
        margin 0 60px 0 70px

        .filtro        
            color azul
            font-size 14px
            font-style italic
            font-weight bold
            text-decoration none

        .publicar
            background naranja
            color white
            float right
            font-style italic
            margin -5px 1em 0 0
            padding 0.2em 0.5em
            text-decoration none
            text-shadow 1px 1px 0px black

        .titulo
         font-size 18px
         font-weigth normal
         margin 0
         padding 0

    .usuario
        position absolute
        right 10px
        top 10px

        .avatar
            margin 0 1em 0 0
            position relative
            z-index 2
            img 
                width 50px
                border-radius 50%

        .flecha
            background naranja
            color white
            display block
            padding 3px
            position absolute
            top 15px
            right 0
            text-aling right
            width 50%
    
nav
    background azul
    
    .menu
        margin 0
        li 
            display inline-block
